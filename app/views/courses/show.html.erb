<div class="container">
  <ul>
    <li><%= @course.title %></li>
    <li><%= @course.description %></li>
  </ul>
</div>

<% if signed_in? %>
  <% if current_user.id == @course.user_id %>
    <%= link_to "Edit Course", edit_course_path(@course) %>
  <% end %>
  <% if current_user.id == @course.user_id %>
    <%= link_to "Delete Course", course_path(@course), method: :delete %>
  <% end %>
<% end %>
