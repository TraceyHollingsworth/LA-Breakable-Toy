<br><div class="container">
  <ul>
    Title: <%= @course.title %><br>
    Description: <%= @course.description %>
  </ul>
</div>

<% if signed_in? %>
  <% if current_user.id == @course.user_id %>
    <%= link_to "Edit Course", edit_course_path(@course), class: "tiny button success" %>
  <% end %>
  <% if current_user.id == @course.user_id %>
    <%= link_to "Delete Course", course_path(@course), class: "tiny button alert", method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
<% end %>
